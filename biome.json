{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/src/**/*",
			"**/external/**/*",
			"**/.vscode/**/*",
			"**/vite.config.js",
			"sst.config.ts",
			"!**/src/routeTree.gen.ts",
			"!**/src/styles.css",
			"!**/src/components/ui/**/*",
			"!**/src/components/ai-elements/**/*",
			"!tmp",
			"!.sst"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"css": {
		"parser": {
			"cssModules": true
		}
	}
}
